#----------------------------------------------------------------------------- 
# Commands used by makefile.
#----------------------------------------------------------------------------- 

RM_CMD := -rm -f

#----------------------------------------------------------------------------- 
# Compiler options.
#----------------------------------------------------------------------------- 

CC := g++
CC_FLAGS := -g -std=c++11 -Wall

#----------------------------------------------------------------------------- 
# Linker options.
#----------------------------------------------------------------------------- 

LIBS :=
LINK_FLAGS := 

#----------------------------------------------------------------------------- 
# Include files.
#----------------------------------------------------------------------------- 

INC_FLAGS := -I /usr/include
GLOBAL_INCS := SpaceObject.h spacesys.h 

#----------------------------------------------------------------------------- 
# Directories to use for build.
#----------------------------------------------------------------------------- 

#----------------------------------------------------------------------------- 
# Any special defines needed by this executable.
#----------------------------------------------------------------------------- 

DEFINES := -DNOTHING

#----------------------------------------------------------------------------- 
# Targets
#----------------------------------------------------------------------------- 

test_space: test_space.o SpaceObject.o SpaceContainer.o
	$(CC) $(CC_FLAGS) $(LIBS) $(LINK_FLAGS) -o $@ $^

.PHONY: clean
clean:
	$(RM_CMD) test_space
	$(RM_CMD) *.o

#----------------------------------------------------------------------------- 
# Pattern Rules
#----------------------------------------------------------------------------- 

%.o : %.cpp
	@echo ""	
	@echo "Compiling $< ..."
	$(CC) -c $(CC_FLAGS) $(DEFINES) $(INC_FLAGS) $< -o $*.o
	#compiled
	@echo ""

